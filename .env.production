# ===================================
# CONFIGURACIÓN FRONTEND OPTIMIZADA
# ===================================

# API Backend optimizada
VITE_API_BASE_URL=https://tu-api-backend.com
# Para desarrollo local:
# VITE_API_BASE_URL=http://localhost:5000

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=pk_live_...

# Performance Settings
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL_INVENTORY=300000
VITE_CACHE_TTL_COMPONENTS=180000
VITE_CACHE_TTL_STATS=600000

# Debounce y optimizaciones
VITE_SEARCH_DEBOUNCE_MS=500
VITE_AUTO_REFRESH_INTERVAL=300000

# Paginación por defecto
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=50

# Configuraciones de UI
VITE_ENABLE_ANIMATIONS=true
VITE_LAZY_LOADING=true

# PWA y Cache (si aplicable)
VITE_ENABLE_PWA=true
VITE_SW_CACHE_TTL=86400000

# Desarrollo y Debug
VITE_ENABLE_LOGGING=false
VITE_LOG_LEVEL=warn

# CDN y assets (si usas CDN)
# VITE_CDN_URL=https://cdn.tu-dominio.com
# VITE_ASSETS_URL=https://assets.tu-dominio.com